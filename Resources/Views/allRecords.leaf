#set("content") {
	<h1>All Records</h1>
	#if(count(records) > 0) {
	<table class="table table-bordered table-hover">
		<thead class="thead-light">
			<tr>
				<th hidden>UUID</th>
                                <th>Area</th>
                                <th>Layer</th>
				<th>UUID</th>
				<th>Type</th>
				<th>Value</th>
				<th>Record Time</th>
				<th>Sender Id</th>
			</tr>
		</thead>
		<tbody>
			#for(record in records) {
			<tr>
				<td hidden>#(record.id)</td>
                                <td>#(record.areaName)</td>
                                <td>#(record.layerName)</td>
				<td>#(record.id)</td>
				<td>#(record.type)</td>
				<td>#(record.value)</td>
				<td>#datetimeStr(record.recordTime)</td>
				<td>#(record.senderId)</td>
			</tr>
			}
		</tbody>
	</table>
	} else {
		<h2>There aren't any records yet!</h2>
	}
}
#embed("base")
